{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "node"
  },
  "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
